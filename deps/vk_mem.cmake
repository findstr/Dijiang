file(GLOB mem_sources CONFIGURE_DEPENDS  "${CMAKE_CURRENT_SOURCE_DIR}/vk_mem/*.cpp")
if(CMAKE_HOST_APPLE)
	add_compile_options(-Wno-nullability-completeness)
endif()
MESSAGE(STATUS "${mem_sources}")
find_package(Vulkan REQUIRED FATAL_ERROR)
if (Vulkan_FOUND)
	include_directories(${Vulkan_INCLUDE_DIRS})
endif(Vulkan_FOUND)
add_library(vk_mem STATIC ${mem_sources})
target_include_directories(vk_mem INTERFACE ${CMAKE_CURRENT_SOURCE_DIR}/vk_mem)
